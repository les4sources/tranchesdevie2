<% content_for :title, "Artisans" %>
<% content_for :layout, "admin" %>

<div class="mb-6 flex justify-between items-center">
  <h1 class="text-2xl font-bold text-gray-900">Artisans-boulangers</h1>
  <%= link_to "Nouvel artisan", new_admin_artisan_path, class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
</div>

<div class="bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Nom</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actif</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% if @artisans.any? %>
          <% @artisans.each do |artisan| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= artisan.name %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                <% if artisan.active? %>
                  <span class="inline-flex items-center rounded-full bg-emerald-100 px-2.5 py-0.5 text-xs font-medium text-emerald-800">Oui</span>
                <% else %>
                  <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-600">Inactif</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <%= link_to "Modifier", edit_admin_artisan_path(artisan), class: "text-blue-600 hover:text-blue-800" %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="3" class="px-6 py-4 text-center text-sm text-gray-500">
              Aucun artisan enregistr√©.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
