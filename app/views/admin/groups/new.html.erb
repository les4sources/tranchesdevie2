<% content_for :title, "Nouveau groupe" %>
<% content_for :layout, "admin" %>

<div class="mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Nouveau groupe</h1>
  <p class="mt-1 text-sm text-gray-600">CrÃ©ez un nouveau groupe de clients avec une remise.</p>
</div>

<% if @group.errors.any? %>
  <div class="mb-6 rounded-lg border border-red-200 bg-red-50 p-4">
    <h2 class="text-sm font-semibold text-red-800">Veuillez corriger les erreurs suivantes :</h2>
    <ul class="mt-2 list-disc space-y-1 pl-5 text-sm text-red-700">
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="bg-white shadow-sm rounded-lg border border-gray-200 p-6">
  <%= form_with model: @group, url: admin_groups_path, local: true do |f| %>
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
      <div>
        <%= f.label :name, "Nom", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name,
                         required: true,
                         class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>

      <div>
        <%= f.label :discount_percent, "Remise (%)", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :discount_percent,
                          required: true,
                          min: 0,
                          max: 100,
                          step: 1,
                          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        <p class="mt-1 text-sm text-gray-500">Valeur entre 0 et 100</p>
      </div>
    </div>

    <div class="mt-8 flex justify-end space-x-3">
      <%= link_to "Annuler", admin_groups_path, class: "inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50" %>
      <%= f.submit "CrÃ©er le groupe", class: "inline-flex items-center rounded-md bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
    </div>
  <% end %>
</div>

