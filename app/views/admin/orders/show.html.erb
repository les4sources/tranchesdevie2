<% content_for :title, "Commande #{@order.order_number}" %>
<% content_for :layout, "admin" %>

<div class="mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Commande <%= @order.order_number %></h1>
</div>

<div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Informations</h2>
    
    <dl class="space-y-3">
      <div>
        <dt class="text-sm font-medium text-gray-500">Statut</dt>
        <dd class="mt-1">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
            <%= case @order.status
                when 'pending' then 'bg-yellow-100 text-yellow-800'
                when 'paid' then 'bg-blue-100 text-blue-800'
                when 'ready' then 'bg-green-100 text-green-800'
                when 'picked_up' then 'bg-gray-100 text-gray-800'
                when 'no_show' then 'bg-red-100 text-red-800'
                when 'cancelled' then 'bg-red-100 text-red-800'
                else 'bg-gray-100 text-gray-800'
                end %>">
            <%= order_status_label(@order.status) %>
          </span>
        </dd>
      </div>

      <div>
        <dt class="text-sm font-medium text-gray-500">Client</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @order.customer.full_name %></dd>
        <% if @order.customer.phone_e164.present? %>
          <dd class="text-sm text-gray-600"><%= @order.customer.phone_e164 %></dd>
        <% end %>
        <% if @order.customer.email.present? %>
          <dd class="text-sm text-gray-600"><%= @order.customer.email %></dd>
        <% end %>
      </div>

      <div>
        <dt class="text-sm font-medium text-gray-500">Jour de cuisson</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @order.bake_day.baked_on.strftime("%d/%m/%Y") %></dd>
        <dd class="text-sm text-gray-600">Date limite : <%= @order.bake_day.cut_off_at.strftime("%d/%m/%Y à %H:%M") %></dd>
      </div>

      <div>
        <dt class="text-sm font-medium text-gray-500">Total</dt>
        <dd class="mt-1 text-lg font-medium text-gray-900">
          <%= number_to_currency(@order.total_euros, unit: "€", separator: ",", delimiter: "") %>
        </dd>
      </div>
    </dl>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Actions</h2>

    <div class="space-y-3">
      <% if @order.can_transition_to?(:ready) %>
        <%= form_with url: update_status_admin_order_path(@order), method: :patch, local: true do |f| %>
          <%= f.hidden_field :status, value: :ready %>
          <%= f.submit "Marquer comme prête", 
              class: "w-full px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700",
              data: { confirm: "Envoyer le SMS 'prête' au client ?" } %>
        <% end %>
      <% end %>

      <% if @order.ready? %>
        <%= form_with url: update_status_admin_order_path(@order), method: :patch, local: true, class: "space-y-2" do |f| %>
          <%= f.hidden_field :status, value: :picked_up %>
          <%= f.submit "Marquer comme récupérée", 
              class: "w-full px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
        <% end %>

        <%= form_with url: update_status_admin_order_path(@order), method: :patch, local: true do |f| %>
          <%= f.hidden_field :status, value: :no_show %>
          <%= f.submit "Marquer comme non récupérée", 
              class: "w-full px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700",
              data: { confirm: "Marquer comme non récupérée ?" } %>
        <% end %>
      <% end %>

      <% if @order.paid? && !@order.bake_day.cut_off_passed? %>
        <%= form_with url: refund_admin_order_path(@order), method: :post, local: true do |f| %>
          <%= f.submit "Rembourser", 
              class: "w-full px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700",
              data: { confirm: "Rembourser intégralement cette commande ?" } %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<div class="mt-6 bg-white rounded-lg shadow-sm border border-gray-200 p-6">
  <h2 class="text-lg font-medium text-gray-900 mb-4">Articles</h2>
  
  <div class="space-y-3">
    <% @order.order_items.each do |item| %>
      <div class="flex justify-between items-center py-2 border-b border-gray-200">
        <div>
          <p class="font-medium text-gray-900"><%= item.product_variant.name %></p>
          <p class="text-sm text-gray-600"><%= item.product_variant.product.name %></p>
        </div>
        <div class="text-right">
          <p class="text-sm text-gray-600"><%= item.qty %> x <%= number_to_currency(item.unit_price_euros, unit: "€", separator: ",", delimiter: "") %></p>
          <p class="font-medium text-gray-900"><%= number_to_currency(item.subtotal_euros, unit: "€", separator: ",", delimiter: "") %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

