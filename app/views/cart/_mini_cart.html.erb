<div class="flex flex-col gap-4">
  <div class="flex items-center justify-between">
    <p class="text-sm font-semibold text-charcoal">Panier</p>
    <span class="text-xs font-medium text-gray-500">
      <% if count.zero? %>
        Aucun article
      <% else %>
        <%= count %> <%= count > 1 ? "produits" : "produit" %>
      <% end %>
    </span>
  </div>

  <% if items.any? %>
    <div class="flex max-h-64 flex-col gap-3 overflow-y-auto pr-1">
      <% items.each do |item| %>
        <div class="flex items-start justify-between gap-3 rounded-lg bg-gray-100 px-3 py-2">
          <div class="flex flex-col">
            <span class="text-sm font-semibold text-charcoal"><%= item[:product_name] %></span>
            <span class="text-xs text-gray-600"><%= item[:variant_name] %></span>
            <span class="text-xs text-gray-500">Qté&nbsp;: <%= item[:qty] %></span>
          </div>
          <span class="text-sm font-semibold text-charcoal">
            <%= number_to_currency(item[:total_cents].to_f / 100, unit: "€", separator: ",", delimiter: "") %>
          </span>
        </div>
      <% end %>
    </div>

    <div class="space-y-2 border-t border-gray-200 pt-4">
      <div class="flex items-center justify-between text-sm text-gray-600">
        <span>Sous-total</span>
        <span><%= number_to_currency((subtotal_cents || total_cents).to_f / 100, unit: "€", separator: ",", delimiter: "") %></span>
      </div>
      <% if discount_cents.to_i > 0 && customer&.group %>
        <div class="flex items-center justify-between text-sm text-green-600">
          <span>Remise (<%= customer.group.discount_percent %>%)</span>
          <span>-<%= number_to_currency(discount_cents.to_f / 100, unit: "€", separator: ",", delimiter: "") %></span>
        </div>
      <% end %>
      <div class="flex items-center justify-between">
        <span class="text-sm font-medium text-gray-600">Total estimé</span>
        <span class="text-base font-semibold text-charcoal">
          <%= number_to_currency(total_cents.to_f / 100, unit: "€", separator: ",", delimiter: "") %>
        </span>
      </div>
    </div>
  <% else %>
    <p class="rounded-lg bg-gray-100 px-3 py-4 text-sm text-gray-600">
      Votre panier est vide pour le moment.
    </p>
  <% end %>

  <a href="<%= cart_path %>" class="flex items-center justify-center gap-2 rounded-lg bg-terracotta px-4 py-2 text-sm font-semibold text-white transition hover:bg-terracotta/90">
    <span class="material-symbols-outlined text-base">shopping_cart_checkout</span>
    Voir le panier
  </a>
</div>

