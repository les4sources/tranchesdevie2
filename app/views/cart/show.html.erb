<% content_for :title, "Panier" %>

<div class="mb-8">
  <h1 class="text-3xl font-bold text-gray-900">Votre panier</h1>
</div>

<% if @cart.empty? %>
  <div class="text-center py-12 bg-white rounded-lg shadow-sm border border-gray-200">
    <p class="text-gray-500 mb-4">Votre panier est vide</p>
    <%= link_to "Voir le catalogue", catalog_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
  </div>
<% else %>
  <div class="bg-white shadow-sm rounded-lg border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900">Articles</h2>
    </div>

    <ul class="divide-y divide-gray-200">
      <% @cart.each do |item| %>
        <% variant = ProductVariant.find(item['product_variant_id']) %>
        <li class="px-6 py-4">
          <div class="flex items-center justify-between">
            <div class="flex-1">
              <p class="text-sm font-medium text-gray-900">
                <%= variant.product.name %> - <%= variant.name %>
              </p>
              <p class="text-sm text-gray-500">
                <%= number_to_currency(variant.price_euros, unit: "€", separator: ",", delimiter: "") %> / unité
              </p>
            </div>
            
            <div class="flex items-center space-x-4">
              <%= form_with url: cart_update_path, method: :patch, local: true, class: "flex items-center space-x-2" do |f| %>
                <%= f.hidden_field :id, value: item['product_variant_id'] %>
                <%= f.number_field :qty, value: item['qty'], min: 1, class: "w-16 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
                <%= f.submit "Mettre à jour", class: "text-sm text-blue-600 hover:text-blue-800" %>
              <% end %>
              
              <%= link_to cart_remove_path(id: item['product_variant_id']), method: :delete, data: { turbo_method: :delete, confirm: "Retirer cet article ?" }, class: "ml-4 text-red-600 hover:text-red-800" do %>
                Retirer
              <% end %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>

    <div class="px-6 py-4 border-t border-gray-200 bg-gray-50">
      <div class="flex justify-between items-center">
        <span class="text-lg font-medium text-gray-900">Total</span>
        <span class="text-xl font-bold text-gray-900">
          <%= number_to_currency(@total / 100.0, unit: "€", separator: ",", delimiter: "") %>
        </span>
      </div>
      
      <% if @bake_day %>
        <p class="mt-2 text-sm text-gray-600">
          Livraison le: <strong><%= @bake_day.baked_on.strftime("%d/%m/%Y") %></strong>
        </p>
      <% end %>

      <div class="mt-4">
        <%= link_to "Passer commande", checkout_path, class: "w-full flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
      </div>
    </div>
  </div>
<% end %>

