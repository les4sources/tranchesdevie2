<% content_for :title, "Panier" %>

<div class="max-w-5xl mx-auto py-6">
  <div class="mb-8">
    <p class="text-sm uppercase tracking-wide text-amber-600 font-semibold mb-2">Tranches de Vie</p>
    <h1 class="text-3xl sm:text-4xl font-extrabold text-gray-900">Ton panier</h1>
    
    <% if @available_bake_days.any? %>
      <div class="mt-4">
        <p class="font-medium text-gray-700 mb-3">Sélectionne ton jour de cuisson :</p>
        <div class="space-y-2">
          <% @available_bake_days.each do |bake_day| %>
            <% cap = @bake_day_capacities[bake_day.id] || { fill_percentage: 0, fully_booked: false } %>
            <% is_full = cap[:fully_booked] %>
            <% fill_pct = cap[:fill_percentage] %>
            <% bar_color = fill_pct >= 80 ? "bg-amber-500" : "bg-emerald-500" %>
            <label class="flex items-center p-3 rounded-lg border-2 transition <%= is_full ? 'border-gray-200 bg-gray-50 opacity-60 cursor-not-allowed' : (@bake_day&.id == bake_day.id ? 'border-amber-500 bg-amber-50 cursor-pointer' : 'border-gray-200 hover:border-gray-300 cursor-pointer') %>">
              <input
                type="radio"
                name="bake_day_id"
                value="<%= bake_day.id %>"
                class="h-4 w-4 text-amber-600 focus:ring-amber-500 border-gray-300"
                <%= 'checked' if @bake_day&.id == bake_day.id %>
                <%= 'disabled' if is_full %>
                data-bake-day-id="<%= bake_day.id %>"
              >
              <span class="ml-3 flex-1 text-gray-900">
                <span class="font-medium"><%= I18n.with_locale(:fr) { I18n.l(bake_day.baked_on, format: "%A %d %B") } %> (commandes jusqu'au <%= I18n.with_locale(:fr) { I18n.l(bake_day.cut_off_at, format: "%A à %H:%M") } %>)</span>
              </span>
              <span class="ml-3 flex items-center gap-2">
                <% if is_full %>
                  <span class="inline-flex items-center rounded-full bg-rose-100 px-2 py-0.5 text-xs font-semibold text-rose-700">Complet</span>
                <% else %>
                  <span class="h-2 w-16 rounded-full bg-gray-200 overflow-hidden">
                    <span class="block h-2 rounded-full <%= bar_color %>" style="width: <%= [fill_pct, 100].min %>%"></span>
                  </span>
                  <span class="text-xs text-gray-500"><%= fill_pct %>%</span>
                <% end %>
              </span>
            </label>
          <% end %>
        </div>
        <p class="mt-3 text-sm text-gray-500">
          <%= link_to "Planifie tes commandes pour les jours de cuisson suivants", calendar_path, class: "text-amber-600 hover:text-amber-700 underline" %>
        </p>
      </div>
    <% elsif @bake_day %>
      <p class="mt-2 text-sm text-gray-600">
        Retrait le <span class="font-medium"><%= I18n.with_locale(:fr) { I18n.l(@bake_day.baked_on, format: "%A %d %B %Y") } %></span>
      </p>
    <% end %>
  </div>

  <% if @cart.empty? %>
    <div class="text-center py-16 bg-white rounded-3xl shadow-sm border border-gray-200">
      <div class="mx-auto h-14 w-14 flex items-center justify-center rounded-full bg-amber-100 text-amber-700 mb-6">
        <svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 3h2l.4 2M7 13h10l3-8H5.4M7 13l-1.5 6h13M7 13L5.4 5M9 21a1 1 0 100-2 1 1 0 000 2zm8 0a1 1 0 100-2 1 1 0 000 2z" />
        </svg>
      </div>
      <h2 class="text-2xl font-semibold text-gray-900 mb-3">Ton panier est vide</h2>
      <p class="text-gray-500 mb-8">Découvre nos pains et pâtisseries artisanales.</p>
      <%= link_to "Voir le catalogue", catalog_path, class: "inline-flex items-center justify-center px-6 py-3 rounded-full text-sm font-semibold text-white bg-amber-500 hover:bg-amber-600 transition" %>
    </div>
  <% else %>
    <div class="grid lg:grid-cols-[2fr_1fr] gap-8">
      <div class="space-y-4">
        <% @cart.each do |item| %>
          <% variant = ProductVariant.find(item['product_variant_id']) %>
          <% product = variant.product %>
          <% qty = item['qty'].to_i %>
          <% line_total = qty * variant.price_cents %>
          <% if product.nil? %>
            <div class="bg-white rounded-2xl border border-gray-200 shadow-sm p-6">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm text-gray-500 italic">Produit supprimé</p>
                  <p class="text-sm text-gray-600"><%= variant.name %></p>
                </div>
                <%= button_to cart_remove_path(item['product_variant_id']), method: :delete, class: "text-sm font-medium text-red-500 hover:text-red-600 transition" do %>
                  Retirer
                <% end %>
              </div>
            </div>
          <% else %>
            <div class="bg-white rounded-2xl border border-gray-200 shadow-sm p-6">
              <div class="flex items-start gap-4">
                <div class="h-20 w-20 rounded-xl bg-amber-100 flex items-center justify-center overflow-hidden">
                  <% image_url = product_background_image(product) %>
                  <% if image_url.present? %>
                    <%= image_tag image_url, alt: product.name, class: "h-full w-full object-cover" %>
                  <% else %>
                    <span class="text-amber-600 font-semibold text-sm">Artisan</span>
                  <% end %>
                </div>

                <div class="flex-1">
                  <div class="flex items-start justify-between gap-4">
                    <div>
                      <h3 class="text-lg font-semibold text-gray-900"><%= product.name %></h3>
                      <p class="text-sm text-gray-500"><%= variant.name %></p>
                    </div>
                    <span class="text-base font-semibold text-gray-900">
                      <%= number_to_currency(line_total / 100.0, unit: "€", separator: ",", delimiter: "") %>
                    </span>
                  </div>

                  <div class="mt-4 flex items-center justify-between">
                    <div class="flex items-center gap-2">
                      <%= button_to cart_update_path, method: :patch, form_class: "flex", class: "inline-flex items-center justify-center h-9 w-9 rounded-full border border-gray-200 text-lg font-semibold text-gray-700 hover:bg-gray-100 transition", params: { id: item['product_variant_id'], qty: [qty - 1, 1].max } do %>
                        &minus;
                      <% end %>
                      <span class="inline-flex items-center justify-center h-9 min-w-[3rem] rounded-full bg-gray-100 text-sm font-semibold text-gray-900">
                        <%= qty %>
                      </span>
                      <%= button_to cart_update_path, method: :patch, form_class: "flex", class: "inline-flex items-center justify-center h-9 w-9 rounded-full border border-gray-200 text-lg font-semibold text-gray-700 hover:bg-gray-100 transition", params: { id: item['product_variant_id'], qty: qty + 1 } do %>
                        +
                      <% end %>
                    </div>

                    <%= button_to cart_remove_path(item['product_variant_id']), method: :delete, data: { confirm: "Retirer cet article ?" }, class: "text-sm font-medium text-red-500 hover:text-red-600 transition" do %>
                      Retirer
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>

      <aside class="lg:sticky lg:top-8 self-start space-y-6">
        <% if phone_verified? && @phone_e164.present? %>
          <div class="bg-white rounded-2xl border border-gray-200 shadow-sm p-6">
            <div class="flex items-center justify-between gap-3 mb-4">
              <div class="flex items-center gap-3 flex-1">
                <div class="h-10 w-10 rounded-full bg-amber-100 flex items-center justify-center">
                  <svg class="h-5 w-5 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900">Connecté avec</p>
                  <p class="text-sm text-gray-600"><%= @phone_e164 %></p>
                </div>
              </div>
            </div>
            <%= button_to cart_logout_path, method: :delete, class: "text-sm font-medium text-gray-500 cursor-pointer hover:text-gray-700 hover:underline transition whitespace-nowrap" do %>
              Se déconnecter
            <% end %>
        </div>
        <% end %>

        <div class="bg-white rounded-2xl border border-gray-200 shadow-sm p-6">
          <div class="pb-4 border-b border-gray-200">
            <h2 class="text-xl font-semibold text-gray-900">Récapitulatif</h2>
            <p class="text-sm text-gray-500 mt-1">Vérifie tes articles avant de passer commande.</p>
          </div>

          <dl class="mt-4 space-y-2 text-sm text-gray-600">
            <div class="flex justify-between">
              <dt>Sous-total</dt>
              <dd class="font-medium text-gray-900">
                <%= number_to_currency(@subtotal / 100.0, unit: "€", separator: ",", delimiter: "") %>
              </dd>
            </div>
            <% if @discount_cents > 0 && @customer&.group %>
              <div class="flex justify-between text-green-600">
                <dt>Remise (<%= @customer.group.name %> - <%= @customer.effective_discount_percent %>%)</dt>
                <dd class="font-medium">
                  -<%= number_to_currency(@discount_cents / 100.0, unit: "€", separator: ",", delimiter: "") %>
                </dd>
              </div>
            <% end %>
          </dl>

          <div class="mt-6 flex items-center justify-between text-base font-semibold text-gray-900">
            <span>Total</span>
            <span>
              <%= number_to_currency(@total / 100.0, unit: "€", separator: ",", delimiter: "") %>
            </span>
          </div>

          <%= link_to "Valider la commande", new_checkout_path, class: "mt-6 inline-flex w-full items-center justify-center rounded-full bg-amber-500 px-6 py-3 text-sm font-semibold text-white shadow-sm hover:bg-amber-600 transition" %>
          <%= link_to "Continuer tes achats", catalog_path, class: "mt-3 inline-flex w-full items-center justify-center text-sm font-semibold text-amber-600 hover:text-amber-700" %>
        </div>
      </aside>
    </div>
  <% end %>
</div>

<script>
  (function() {
    // Fonction pour mettre à jour les styles en fonction de l'état des radio buttons
    function updateStyles() {
      const radioButtons = document.querySelectorAll('input[name="bake_day_id"]');
      radioButtons.forEach(function(radio) {
        const label = radio.closest('label');
        if (!label) return;
        
        if (radio.checked) {
          label.classList.remove('border-gray-200', 'hover:border-gray-300');
          label.classList.add('border-amber-500', 'bg-amber-50');
        } else {
          label.classList.remove('border-amber-500', 'bg-amber-50');
          label.classList.add('border-gray-200', 'hover:border-gray-300');
        }
      });
    }
    
    // Fonction pour initialiser la sélection des jours de cuisson
    function initializeBakeDaySelection() {
      // Appliquer les styles initiaux
      updateStyles();
    }
    
    // Gestionnaire d'événement pour le changement de sélection (délégation d'événements)
    function handleBakeDayChange(event) {
      if (event.target && event.target.name === 'bake_day_id' && event.target.checked) {
        const bakeDayId = event.target.value;
        
        // Mettre à jour visuellement les labels
        updateStyles();
        
        // Envoyer la requête AJAX
        const csrfToken = document.querySelector('meta[name="csrf-token"]')?.getAttribute('content') || '';
        
        fetch('<%= cart_update_bake_day_path %>', {
          method: 'PATCH',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': csrfToken,
            'Accept': 'application/json'
          },
          body: JSON.stringify({ bake_day_id: bakeDayId }),
          credentials: 'same-origin'
        })
        .then(function(response) {
          if (!response.ok) {
            throw new Error('Erreur lors de la mise à jour');
          }
          return response.json();
        })
        .then(function(data) {
          if (data.success) {
            // Jour de cuisson mis à jour avec succès
          } else {
            throw new Error(data.error || 'Erreur inconnue');
          }
        })
        .catch(function(error) {
          console.error('Erreur:', error);
          // Revenir à l'état précédent en cas d'erreur
          location.reload();
        });
      }
    }
    
    // Initialiser au chargement de la page
    function init() {
      initializeBakeDaySelection();
    }
    
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }
    
    // Utiliser la délégation d'événements au niveau du document (fonctionne avec Turbo)
    document.addEventListener('change', handleBakeDayChange);
    
    // Réinitialiser les styles après chaque navigation Turbo
    document.addEventListener('turbo:load', initializeBakeDaySelection);
    document.addEventListener('turbo:frame-load', initializeBakeDaySelection);
  })();
</script>