<% content_for :title, "Tranches de Vie - Les 4 Sources" %>

<% if @seasonal_promotion.present? && @seasonal_promotion[:active] %>
  <div class="px-4">
    <div class="flex flex-col items-stretch justify-start overflow-hidden rounded-xl bg-[#fcf8dc] xl:flex-row xl:items-center">
      <!--div
        class="aspect-[16/9] w-full bg-cover bg-center bg-no-repeat md:h-full md:w-1/3"
        style='background-image: url("<%= @seasonal_promotion[:image_url] || "https://images.unsplash.com/photo-1608198093002-ad4e005484ec?auto=format&fit=crop&w=1200&q=80" %>");'>
      </div-->

      <div class="flex w-full min-w-72 grow flex-col items-start justify-center gap-4 p-8">
        <div>
          <p class="text-2xl font-bold leading-tight tracking-[-0.015em] text-charcoal">
            <%= @seasonal_promotion[:title] || "Taste of Autumn: Our Pumpkin Spice Sourdough is Back!" %>
          </p>
          <p class="mt-3 text-base font-normal leading-normal text-gray-600">
            <%= @seasonal_promotion[:description] || "Limited time only. Pre-order now for a delicious seasonal treat." %>
          </p>
        </div>

        <% if @seasonal_promotion[:cta_path].present? %>
          <%= link_to(@seasonal_promotion[:cta_path] || catalog_path,
                      class: "inline-flex h-11 items-center justify-center rounded-xl bg-black px-6 text-sm font-semibold text-white shadow-sm transition hover:bg-terracotta/90",
                      aria: { label: @seasonal_promotion[:cta_text] || "Shop Now" }) do %>
            <%= @seasonal_promotion[:cta_text] || "Shop Now" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

  <!-- Order process steps -->
  <div class="mx-auto px-4">
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
      <!-- Step 1 -->
      <div class="flex flex-col items-start gap-3 rounded-xl border border-gray-200 bg-white p-4 shadow-sm transition hover:shadow-md">
        <div class="flex h-10 w-10 items-center justify-center rounded-full bg-[#acc037] text-lg font-bold text-white shadow-sm">
          1
        </div>
        <p class="text-sm font-medium leading-relaxed text-gray-900">
          Ajoute tes pains et autres produits dans ton panier
        </p>
      </div>

      <!-- Step 2 -->
      <div class="flex flex-col items-start gap-3 rounded-xl border border-gray-200 bg-white p-4 shadow-sm transition hover:shadow-md">
        <div class="flex h-10 w-10 items-center justify-center rounded-full bg-[#acc037] text-lg font-bold text-white shadow-sm">
          2
        </div>
        <p class="text-sm font-medium leading-relaxed text-gray-900">
          Dans le panier, sélectionne le jour de cuisson
        </p>
      </div>

      <!-- Step 3 -->
      <div class="flex flex-col items-start gap-3 rounded-xl border border-gray-200 bg-white p-4 shadow-sm transition hover:shadow-md">
        <div class="flex h-10 w-10 items-center justify-center rounded-full bg-[#acc037] text-lg font-bold text-white shadow-sm">
          3
        </div>
        <p class="text-sm font-medium leading-relaxed text-gray-900">
          Passe commande et paie en ligne ou en cash lors de ton retrait
        </p>
      </div>

      <!-- Step 4 -->
      <div class="flex flex-col items-start gap-3 rounded-xl border border-gray-200 bg-white p-4 shadow-sm transition hover:shadow-md">
        <div class="flex h-10 w-10 items-center justify-center rounded-full bg-[#acc037] text-lg font-bold text-white shadow-sm">
          4
        </div>
        <p class="text-sm font-medium leading-relaxed text-gray-900">
          Récupère ton pain aux 4 Sources le jour de cuisson ou le lendemain matin
        </p>
      </div>
    </div>
  </div>

<% if @products.any? %>
  <% @products.group_by { |product, _variants| product.category }.each do |category, grouped_products| %>
    <div class="px-4 pt-4">
      <h3 class="text-xl font-bold leading-tight tracking-[-0.015em] text-charcoal"><%= product_category_heading(category) %></h3>
    </div>

    <div class="grid grid-cols-1 gap-6 px-4 py-6 sm:grid-cols-2 md:grid-cols-4">
      <% grouped_products.each do |product_data| %>
        <% product = product_data[0] %>
        <% variants = product_data[1] %>
        <% primary_variant = variants.min_by(&:price_cents) %>
        <% variant_images = variant_images_for_product(product, variants) %>
        <div class="group flex flex-col gap-3 pb-3">
          <%= link_to product_path(product), class: "block overflow-hidden rounded-lg bg-cover bg-center" do %>
            <div class="aspect-square w-full transform transition-transform duration-300 group-hover:scale-105" style="background-image: url('<%= variant_images.first[:url] %>'); background-size: cover; background-position: center;"></div>
          <% end %>
          <div>
            <%= link_to product_path(product), class: "text-lg font-medium leading-normal text-charcoal hover:text-terracotta transition" do %>
              <%= product.name %>
            <% end %>

            <div class="mt-4 space-y-3">
              <% variants.each do |variant| %>
                <%= form_with url: cart_add_path, method: :post, local: true, data: { action: "submit->cart#add" }, class: "flex items-center justify-between gap-4 rounded-2xl border border-gray-200 bg-white px-4 py-3 shadow-sm transition hover:border-terracotta/40" do |f| %>
                  <%= f.hidden_field :product_variant_id, value: variant.id %>
                  <%= f.hidden_field :qty, value: 1 %>

                  <div class="flex items-center gap-3">
                    <% variant_qty = current_cart_variant_qty(variant.id) %>
                    <button type="submit" class="flex h-8 w-8 items-center justify-center rounded-lg bg-lime-300 text-lg font-semibold leading-none text-charcoal shadow hover:bg-lime-400 focus:outline-none focus:ring-2 focus:ring-lime-400/60" data-cart-target="button" data-cart-variant-id="<%= variant.id %>" data-cart-current-qty="<%= variant_qty %>">
                      <%= variant_qty > 0 ? variant_qty : "+" %>
                    </button>
                    <span class="text-sm font-medium text-charcoal"><%= variant.name %></span>
                  </div>

                  <span class="inline-flex items-center rounded-lg px-3 py-1 text-sm text-right font-semibold text-slate-700">
                    <%= number_to_currency(variant.price_euros, unit: "€", separator: ",", delimiter: "") %>
                  </span>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
<% else %>
  <div class="px-4 py-16 text-center">
    <p class="text-base text-gray-500">Aucun produit disponible pour le moment.</p>
  </div>
<% end %>
