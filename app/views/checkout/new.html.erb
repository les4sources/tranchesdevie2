<% content_for :title, "Paiement" %>

<%# Stripe is loaded globally in the layout %>

<div class="w-full mx-auto">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Finaliser ta commande</h1>

  <div class="grid grid-cols-1 gap-8">
    <!-- Formulaire informations client -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Informations</h2>

      <%= form_with model: @customer, url: "#", local: false, id: "customer-form", data: { controller: "checkout" } do |f| %>
        <% unless @otp_verified %>
          <!-- Etape de verification du numero -->
          <div id="phone-verification-step">
            <div class="mb-4" data-controller="phone-input" data-phone-input-default-country-value="BE">
              <%= f.label :phone_e164, "Ton num√©ro de GSM", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <div class="relative">
                <%= f.text_field :phone_e164, 
                    data: { 
                      phone_input_target: "input"
                    },
                    class: "w-full rounded-md border-1 border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 p-2 text-lg pr-24",
                    required: true,
                    pattern: "\\+[1-9]\\d{1,14}",
                    autocomplete: "tel" %>
                <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                  <span 
                    data-phone-input-target="flag"
                    class="text-xl">
                    üáßüá™
                  </span>
                </div>
              </div>
            </div>

            <button type="button" 
                    id="send-otp-btn" 
                    data-action="click->checkout#sendOTP"
                    class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
              Me connecter
            </button>

            <p class="text-sm text-gray-500 mt-2">Pas de GSM ? <a href="mailto:boulangerie@les4sources.be" class="text-blue-600 hover:text-blue-700 hover:underline">Contacte-nous pour commander</a></p>

            <div id="otp-input-section" class="hidden mt-4">
              <div class="mb-4">
                <%= label_tag :otp_code, "Code de v√©rification (6 chiffres)", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= text_field_tag :otp_code, nil, 
                    maxlength: 6,
                    pattern: "\\d{6}",
                    class: "w-full rounded-md border-gray-300 shadow-sm p-2 text-lg focus:border-blue-500 focus:ring-blue-500",
                    placeholder: "123456" %>
              </div>

              <button type="button" 
                      id="verify-otp-btn" 
                      data-action="click->checkout#verifyOTP"
                      class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700">
                V√©rifier le code
              </button>
            </div>

            <div id="otp-message" class="mt-4 hidden"></div>
          </div>
        <% else %>
          <!-- Details du client -->
          <div id="customer-details">
            <div class="mb-4">
              <%= f.label :first_name, "Ton pr√©nom *", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_field :first_name,
                  value: @customer.first_name,
                  class: "w-full rounded-md border-1 border-gray-300 shadow-sm p-2 text-lg focus:border-blue-500 focus:ring-blue-500",
                  required: true %>
            </div>

            <div class="mb-4">
              <%= f.label :last_name, "Ton nom *", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_field :last_name,
                  value: @customer.last_name,
                  required: true,
                  class: "w-full rounded-md border-1 border-gray-300 shadow-sm p-2 text-lg focus:border-blue-500 focus:ring-blue-500" %>
            </div>

            <div class="mb-4">
              <%= f.label :email, "Ton adresse e-mail (optionnel)", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.email_field :email,
                  value: @customer.email,
                  class: "w-full rounded-md border-1 border-gray-300 shadow-sm p-2 text-lg focus:border-blue-500 focus:ring-blue-500" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Section paiement -->
    <% if @otp_verified %>
    <div id="payment-section" class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Paiement</h2>

      <div class="mb-4">
        <p class="text-sm text-gray-600 mb-2">R√©sum√© de la commande:</p>
        <div class="space-y-2">
          <% @cart.each do |item| %>
            <% variant = ProductVariant.find(item['product_variant_id']) %>
            <div class="flex justify-between text-sm">
              <span><%= "#{variant.product&.name || 'Produit supprim√©'} - #{variant.name}" %> x <%= item['qty'] %></span>
              <span><%= number_to_currency((item['qty'].to_i * variant.price_cents) / 100.0, unit: "‚Ç¨", separator: ",", delimiter: "") %></span>
            </div>
          <% end %>
        </div>
        <div class="mt-4 pt-4 border-t border-gray-200 space-y-2">
          <div class="flex justify-between text-sm">
            <span>Sous-total</span>
            <span><%= number_to_currency(@subtotal_cents / 100.0, unit: "‚Ç¨", separator: ",", delimiter: "") %></span>
          </div>
          <% if @discount_cents > 0 && @customer&.group %>
            <div class="flex justify-between text-sm text-green-600">
              <span>Remise (<%= @customer.group.name %> - <%= @customer.effective_discount_percent %>%)</span>
              <span>-<%= number_to_currency(@discount_cents / 100.0, unit: "‚Ç¨", separator: ",", delimiter: "") %></span>
            </div>
          <% end %>
          <div class="flex justify-between pt-2 border-t border-gray-200">
            <span class="font-medium">Total</span>
            <span class="font-bold"><%= number_to_currency(@total_cents / 100.0, unit: "‚Ç¨", separator: ",", delimiter: "") %></span>
          </div>
        </div>
      </div>

      <!-- S√©lecteur de m√©thode de paiement -->
      <div class="mb-6">
        <label class="block text-sm font-medium text-gray-700 mb-3">M√©thode de paiement</label>
        <div class="space-y-3">
          <label class="flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-blue-500 transition payment-method-option" data-payment-method="cash">
            <input type="radio" name="payment_method" value="cash" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300" checked>
            <span class="ml-3 font-medium text-gray-700">Payer ma commande en liquide au retrait</span>
          </label>
          <label class="flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-blue-500 transition payment-method-option" data-payment-method="online">
            <input type="radio" name="payment_method" value="online" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300">
            <span class="ml-3 font-medium text-gray-700">Payer en ligne avec Bancontact ou autre</span>
          </label>
        </div>
      </div>

      <!-- Section paiement Stripe (masqu√©e par d√©faut) -->
      <div id="stripe-payment-section" class="hidden">
        <div id="payment-element" class="mb-4">
          <!-- L'element de paiement Stripe sera insere ici -->
        </div>

        <button id="submit-payment" 
                class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed"
                disabled>
          Payer <%= number_to_currency(@total_cents / 100.0, unit: "‚Ç¨", separator: ",", delimiter: "") %>
        </button>

        <div id="payment-message" class="mt-4 hidden"></div>
      </div>

      <!-- Bouton pour commande cash -->
      <div id="cash-order-section">
        <button id="submit-cash-order" 
                class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
          Confirmer la commande
        </button>
        <p class="mt-2 text-sm text-gray-500 text-center">Vous paierez en liquide lors du retrait de votre commande</p>
      </div>
    </div>
    <% end %>
  </div>
</div>

<%= javascript_tag do %>
  // Attendre que Stripe soit charge avant l'initialisation
  function waitForStripe(callback) {
    if (typeof Stripe !== 'undefined') {
      callback();
    } else {
      setTimeout(() => waitForStripe(callback), 50);
    }
  }

  let stripe;
  let paymentElement;
  let elements;
  let stripeInitialized = false;
  let currentPaymentMethod = 'cash'; // Par d√©faut, paiement cash

  // Initialiser l'√©tat de la m√©thode de paiement
  function initializePaymentMethodState() {
    const paymentMethodRadios = document.querySelectorAll('input[name="payment_method"]');
    const stripeSection = document.getElementById('stripe-payment-section');
    const cashSection = document.getElementById('cash-order-section');
    
    // Trouver le radio button s√©lectionn√©
    const selectedRadio = Array.from(paymentMethodRadios).find(radio => radio.checked);
    if (selectedRadio) {
      currentPaymentMethod = selectedRadio.value;
    }
    
    // Ajuster l'affichage selon la m√©thode s√©lectionn√©e
    if (currentPaymentMethod === 'online') {
      if (stripeSection) stripeSection.classList.remove('hidden');
      if (cashSection) cashSection.classList.add('hidden');
    } else {
      if (stripeSection) stripeSection.classList.add('hidden');
      if (cashSection) cashSection.classList.remove('hidden');
    }
  }

  // G√©rer le changement de m√©thode de paiement
  function handlePaymentMethodChange() {
    const paymentMethodRadios = document.querySelectorAll('input[name="payment_method"]');
    const stripeSection = document.getElementById('stripe-payment-section');
    const cashSection = document.getElementById('cash-order-section');

    paymentMethodRadios.forEach(radio => {
      radio.addEventListener('change', function() {
        currentPaymentMethod = this.value;
        
        if (this.value === 'online') {
          // Afficher la section Stripe et masquer le bouton cash
          if (stripeSection) stripeSection.classList.remove('hidden');
          if (cashSection) cashSection.classList.add('hidden');
          
          // Initialiser Stripe si pas d√©j√† fait
          if (!stripeInitialized) {
            initStripe();
          } else {
            // R√©initialiser le paiement Stripe
            initializePayment();
          }
        } else {
          // Masquer la section Stripe et afficher le bouton cash
          if (stripeSection) stripeSection.classList.add('hidden');
          if (cashSection) cashSection.classList.remove('hidden');
          
          // D√©montrer l'√©l√©ment Stripe si pr√©sent
          if (paymentElement) {
            paymentElement.unmount();
            paymentElement = null;
          }
        }
      });
    });
  }

  // Initialiser Stripe lorsqu'il est charge
  function initStripe() {
    // Eviter les initialisations multiples
    if (stripeInitialized && stripe) {
      return;
    }

    waitForStripe(function() {
      if (!stripe) {
        stripe = Stripe('<%= ENV['STRIPE_PUBLIC_KEY'] %>');
        stripeInitialized = true;
      }
      
      // Initialiser l'element de paiement lorsque l'OTP est verifie et que le paiement en ligne est choisi
      <% if @otp_verified %>
        // Attendre un court instant pour que le DOM soit pret
        setTimeout(() => {
          if (currentPaymentMethod === 'online') {
            initializePayment();
          }
        }, 100);
      <% end %>
    });
  }

  // Initialiser au chargement de la page
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', function() {
      initializePaymentMethodState();
      handlePaymentMethodChange();
      initStripe();
    });
  } else {
    initializePaymentMethodState();
    handlePaymentMethodChange();
    initStripe();
  }

  // Reinitialiser lors de la navigation Turbo (Turbo Drive)
  document.addEventListener('turbo:load', function() {
    // Ne reinitialiser que si l'utilisateur est sur la page de paiement
    if (window.location.pathname.includes('/checkout')) {
      stripeInitialized = false; // Reinitialiser le drapeau pour autoriser une nouvelle initialisation
      initializePaymentMethodState();
      handlePaymentMethodChange();
      initStripe();
    }
  });

  function initializePayment() {
    if (!stripe) {
      console.error('Stripe non initialise');
      return;
    }
    
    // Ne pas initialiser si le paiement cash est s√©lectionn√©
    if (currentPaymentMethod !== 'online') {
      return;
    }
    
    fetch('<%= create_payment_intent_checkout_index_path %>', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': '<%= form_authenticity_token %>'
      },
      body: JSON.stringify({
        first_name: document.getElementById('customer_first_name')?.value || '',
        last_name: document.getElementById('customer_last_name')?.value || '',
        email: document.getElementById('customer_email')?.value || ''
      })
    })
    .then(response => {
      if (!response.ok) {
        return response.text().then(text => {
          console.error("Reponse d'erreur :", text);
          throw new Error(`HTTP ${response.status}: ${text.substring(0, 100)}`);
        });
      }
      return response.json();
    })
    .then(data => {
      if (data.error) {
        console.error("Erreur d'intention de paiement :", data.error);
        alert('Erreur: ' + data.error);
        return;
      }

      // Nettoyer tout element de paiement existant
      if (paymentElement) {
        paymentElement.unmount();
      }

      elements = stripe.elements({ clientSecret: data.client_secret });
      paymentElement = elements.create('payment');
      
      // Monter l'element de paiement (operation synchrone)
      paymentElement.mount('#payment-element');
      
      // Activer le bouton lorsque l'element de paiement est monte
      const submitButton = document.getElementById('submit-payment');
      if (submitButton) {
        submitButton.disabled = false;
      }

      // Retirer les anciens gestionnaires d'√©v√©nements pour √©viter les doublons
      const newSubmitButton = submitButton.cloneNode(true);
      submitButton.parentNode.replaceChild(newSubmitButton, submitButton);

      const paymentIntentId = data.payment_intent_id;
      const successUrl = '<%= success_checkout_index_url %>';

      // Ajouter un gestionnaire de clic pour la soumission du paiement
      newSubmitButton.addEventListener('click', async (e) => {
        e.preventDefault();
        
        newSubmitButton.disabled = true;
        newSubmitButton.textContent = 'Traitement...';

        const returnUrl = paymentIntentId
          ? `${successUrl}?payment_intent=${encodeURIComponent(paymentIntentId)}`
          : successUrl;

        const { error } = await stripe.confirmPayment({
          elements,
          confirmParams: {
            return_url: returnUrl
          }
        });

        if (error) {
          const paymentMessage = document.getElementById('payment-message');
          if (paymentMessage) {
            paymentMessage.textContent = error.message;
            paymentMessage.classList.remove('hidden');
          }
          newSubmitButton.disabled = false;
          newSubmitButton.textContent = 'Payer <%= number_to_currency(@total_cents / 100.0, unit: "‚Ç¨", separator: ",", delimiter: "") %>';
        }
      });
    })
    .catch(error => {
      console.error("Erreur lors de l'initialisation du paiement :", error);
      const paymentMessage = document.getElementById('payment-message');
      if (paymentMessage) {
        paymentMessage.textContent = 'Erreur lors de l\'initialisation du paiement: ' + error.message;
        paymentMessage.classList.remove('hidden');
      }
    });
  }

  // G√©rer la soumission de commande cash
  function handleCashOrderSubmission() {
    const submitCashButton = document.getElementById('submit-cash-order');
    if (!submitCashButton) return;

    submitCashButton.addEventListener('click', async (e) => {
      e.preventDefault();
      
      // V√©rifier que les informations client sont remplies
      const firstName = document.getElementById('customer_first_name')?.value;
      if (!firstName || firstName.trim() === '' || firstName.trim() === 'Client') {
        alert('Veuillez remplir votre nom et pr√©nom afin que les pains soient attribu√©s √† la bonne personne');
        return;
      }

      const lastName = document.getElementById('customer_last_name')?.value;
      if (!lastName || lastName.trim() === '') {
        alert('Veuillez remplir votre nom et pr√©nom afin que les pains soient attribu√©s √† la bonne personne');
        return;
      }

      submitCashButton.disabled = true;
      submitCashButton.textContent = 'Traitement...';

      try {
        const response = await fetch('<%= create_cash_order_checkout_index_path %>', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': '<%= form_authenticity_token %>'
          },
          body: JSON.stringify({
            first_name: document.getElementById('customer_first_name')?.value || '',
            last_name: document.getElementById('customer_last_name')?.value || '',
            email: document.getElementById('customer_email')?.value || ''
          })
        });

        const data = await response.json();

        if (data.success) {
          // Rediriger vers la page de succ√®s
          window.location.href = '<%= success_checkout_index_url %>?order_token=' + data.order_token;
        } else {
          alert(data.error || 'Erreur lors de la cr√©ation de la commande');
          submitCashButton.disabled = false;
          submitCashButton.textContent = 'Confirmer la commande';
        }
      } catch (error) {
        console.error("Erreur lors de la cr√©ation de la commande cash :", error);
        alert('Erreur de connexion. Veuillez r√©essayer.');
        submitCashButton.disabled = false;
        submitCashButton.textContent = 'Confirmer la commande';
      }
    });
  }

  // Initialiser la gestion de la commande cash
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', handleCashOrderSubmission);
  } else {
    handleCashOrderSubmission();
  }
<% end %>


