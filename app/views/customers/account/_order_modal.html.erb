<!-- Modale de détails de commande -->
<div id="order-modal" class="hidden fixed inset-0 z-50 overflow-y-auto" data-order-modal-target="modal" data-action="click->order-modal#closeBackground keydown@window->order-modal#closeWithEscape">
  <!-- Overlay -->
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" data-order-modal-target="overlay"></div>

  <!-- Conteneur pour centrer la modale -->
  <div class="flex min-h-full items-center justify-center p-4">
    <!-- Modale -->
    <div class="relative z-10 w-full max-w-lg transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all">
      <div class="bg-white px-4 pt-5 pb-4 sm:p-6" data-order-modal-target="content">
        <div class="flex justify-between items-start mb-4">
          <h3 class="text-lg font-medium text-gray-900" data-order-modal-target="title">Détails de la commande</h3>
          <button type="button" 
                  class="text-gray-400 hover:text-gray-500"
                  data-action="click->order-modal#close">
            <span class="material-symbols-outlined">close</span>
          </button>
        </div>

        <div data-order-modal-target="body">
          <!-- Le contenu sera rempli dynamiquement par JavaScript -->
        </div>
      </div>
    </div>
  </div>
</div>

