<% content_for :title, "Mon compte" %>

<div class="w-full mx-auto" data-controller="order-modal">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Mon compte</h1>
    <div class="flex gap-3">
      <%= link_to "Modifier mon profil", customers_edit_account_path, class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
      <%= button_to "Déconnexion",
            customer_logout_path,
            method: :delete,
            form: { class: "inline" },
            class: "px-4 py-2 bg-red-100 text-red-700 rounded-md hover:bg-red-200" %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-8">
    <!-- Informations personnelles -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Informations personnelles</h2>
      <div class="space-y-2">
        <div>
          <span class="text-sm font-medium text-gray-500">Prénom</span>
          <p class="text-gray-900"><%= @customer.first_name %></p>
        </div>
        <% if @customer.last_name.present? %>
          <div>
            <span class="text-sm font-medium text-gray-500">Nom</span>
            <p class="text-gray-900"><%= @customer.last_name %></p>
          </div>
        <% end %>
        <% if @customer.phone_e164.present? %>
          <div>
            <span class="text-sm font-medium text-gray-500">Téléphone</span>
            <p class="text-gray-900"><%= @customer.phone_e164 %></p>
          </div>
        <% end %>
        <% if @customer.email.present? %>
          <div>
            <span class="text-sm font-medium text-gray-500">Email</span>
            <p class="text-gray-900"><%= @customer.email %></p>
          </div>
        <% end %>
        <div>
          <span class="text-sm font-medium text-gray-500">Notifications SMS</span>
          <p class="text-gray-900">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @customer.sms_enabled? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
              <%= @customer.sms_enabled? ? 'Activées' : 'Désactivées' %>
            </span>
          </p>
        </div>
      </div>
    </div>

    <!-- Liste des commandes -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Mes commandes</h2>
      <% if @orders.any? %>
        <div class="space-y-3">
          <% @orders.each do |order| %>
            <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50 cursor-pointer transition"
                 data-action="click->order-modal#open"
                 data-order-modal-order-id-value="<%= order.id %>"
                 data-order-modal-order-data-value="<%= order.to_json(include: { bake_day: { only: [:id, :baked_on, :cut_off_at] }, order_items: { include: { product_variant: { include: :product } } }, customer: { include: { group: { only: [:id, :name, :discount_percent] } } } }) %>">
              <div class="flex justify-between items-start">
                <div>
                  <p class="font-medium text-gray-900">Commande <%= order.order_number %></p>
                  <p class="text-sm text-gray-600">Cuisson le <%= order.bake_day.baked_on.strftime("%d/%m/%Y") %></p>
                </div>
                <div class="text-right">
                  <p class="font-medium text-gray-900"><%= number_to_currency(order.total_euros, unit: "€", separator: ",", delimiter: "") %></p>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <%= case order.status
                        when 'unpaid' then 'bg-orange-100 text-orange-800'
                        when 'paid' then 'bg-blue-100 text-blue-800'
                        when 'ready' then 'bg-green-100 text-green-800'
                        when 'picked_up' then 'bg-gray-100 text-gray-800'
                        when 'no_show' then 'bg-red-100 text-red-800'
                        when 'cancelled' then 'bg-red-100 text-red-800'
                        else 'bg-gray-100 text-gray-800'
                        end %>">
                    <%= order_status_label(order.status) %>
                  </span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-600">Aucune commande pour le moment.</p>
      <% end %>
    </div>
  </div>
  
  <%= render "customers/account/order_modal" %>
</div>

