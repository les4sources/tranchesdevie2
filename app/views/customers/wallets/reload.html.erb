<% content_for :title, "Recharger mon portefeuille" %>

<div class="w-full max-w-md mx-auto">
  <div class="mb-8">
    <%= link_to "← Retour", customers_wallet_path, class: "text-gray-600 hover:text-gray-900" %>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Recharger mon portefeuille</h1>

    <div class="mb-6">
      <p class="text-sm text-gray-500">Solde actuel</p>
      <p class="text-2xl font-bold <%= @wallet.balance_cents >= 0 ? 'text-green-600' : 'text-red-600' %>">
        <%= number_to_currency(@wallet.balance_euros, unit: '€', format: '%n %u') %>
      </p>
    </div>

    <div data-controller="wallet-reload" data-wallet-reload-create-url-value="<%= customers_wallet_create_reload_path %>">
      <!-- Montant -->
      <div class="mb-6">
        <label class="block text-sm font-medium text-gray-700 mb-2">Montant à recharger</label>
        <div class="grid grid-cols-4 gap-2 mb-3">
          <button type="button" data-wallet-reload-target="amountBtn" data-amount="1000"
                  class="px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-green-500">
            10€
          </button>
          <button type="button" data-wallet-reload-target="amountBtn" data-amount="2000"
                  class="px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-green-500">
            20€
          </button>
          <button type="button" data-wallet-reload-target="amountBtn" data-amount="5000"
                  class="px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-green-500">
            50€
          </button>
          <button type="button" data-wallet-reload-target="amountBtn" data-amount="10000"
                  class="px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-green-500">
            100€
          </button>
        </div>
        <div class="relative">
          <input type="number" min="5" step="1" placeholder="Autre montant"
                 data-wallet-reload-target="customAmount"
                 class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green-500 focus:border-green-500">
          <span class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500">€</span>
        </div>
      </div>

      <!-- Montant sélectionné -->
      <div class="mb-6 p-4 bg-gray-50 rounded-lg">
        <p class="text-sm text-gray-500">Montant de la recharge</p>
        <p class="text-2xl font-bold text-gray-900" data-wallet-reload-target="selectedAmount">0 €</p>
      </div>

      <!-- Erreurs -->
      <p data-wallet-reload-target="error" class="mb-4 text-sm text-red-600 hidden"></p>

      <!-- Submit -->
      <button type="button" data-action="click->wallet-reload#submit"
              data-wallet-reload-target="submitBtn"
              class="w-full py-3 px-4 bg-green-600 text-white font-medium rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 disabled:bg-gray-400 disabled:cursor-not-allowed">
        <span data-wallet-reload-target="btnText">Payer avec Bancontact</span>
        <span data-wallet-reload-target="btnSpinner" class="hidden">
          Traitement en cours...
        </span>
      </button>
    </div>
  </div>
</div>
